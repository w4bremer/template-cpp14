project(OLinkClient)
cmake_minimum_required(VERSION 3.1)

# append local binary directory for conan packages to be found
set(CMAKE_MODULE_PATH ${CMAKE_BINARY_DIR} ${CMAKE_MODULE_PATH})

set(CMAKE_CXX_STANDARD 14)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

set (SOURCES
    main.cpp
)
add_executable(OLinkClient
    ${SOURCES}
)

{% for module in system.modules %}
find_package({{module.name|identifier}} QUIET COMPONENTS {{module.name|identifier}}-core {{module.name|identifier}}-implementation {{module.name|identifier}}-monitor {{module.name|identifier}}-olink)
{% endfor %}
target_link_libraries(OLinkClient
{% for module in system.modules %}
    {{module.name|identifier}}::{{module.name|identifier}}-core
    {{module.name|identifier}}::{{module.name|identifier}}-implementation
    {{module.name|identifier}}::{{module.name|identifier}}-monitor
    {{module.name|identifier}}::{{module.name|identifier}}-olink
{% endfor %}
)

install(TARGETS OLinkClient
        RUNTIME DESTINATION bin COMPONENT Runtime)
