{{class}}::{{class}}({{interface_class}}* impl)
    : m_impl(impl)
{
    m_impl->_getPublisher()->subscribeTo{{interface.name | capital}}Interface(*this);
}
{{interface_class}}* {{class}}::swapUnderlyingImplementation({{interface_class}}* impl)
{
    {{interface_class}}* retVal = m_impl;
    if (m_impl != nullptr) {
        m_impl->_getPublisher()->unsubscribeFrom{{interface.name | capital}}Interface(*this);
    }
    m_impl = impl;
    if (m_impl != nullptr) {
        m_impl->_getPublisher()->subscribeTo{{interface.name | capital}}Interface(*this);
    }
    return retVal;
}
{{interface_class}}* {{class}}::disconnectFromUnderlyingImplementation()
{
    {{interface_class}}* retVal = m_impl;
    if (m_impl != nullptr) {
        m_impl->_getPublisher()->unsubscribeFrom{{interface.name | capital}}Interface(*this);
        m_impl = nullptr;
    }
    return retVal;
}
{{class}}::~{{class}}()
{
    if (m_impl != nullptr)
    {
        m_impl->_getPublisher()->unsubscribeFrom{{interface.name | capital}}Interface(*this);
    }
}
